package swingTutorials;

import java.awt.Toolkit;
import java.awt.Dimension;

import javax.swing.JFrame;

public class SwingTutorial_1 extends javax.swing.JFrame {

	/**
	 * 
	 */
	private static final long serialVersionUID = 4862611498603965107L;
	private Toolkit tk;
	
	private int positionKoordinateX, positionKoordinateY, windowWidth=400, windowHeight=300;
	
	public SwingTutorial_1() {
		tk = Toolkit.getDefaultToolkit();
		Dimension d = tk.getScreenSize();
		
		positionKoordinateX = (int)(d.getWidth() - windowWidth /2);
		positionKoordinateY = (int)(d.getHeight() - windowHeight /2);
		
		
		
		setTitle("SwingTutorial_1");
		setBounds(positionKoordinateX, positionKoordinateY, windowWidth, windowHeight);
		
		
		
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		setVisible(true);
	}

	public static void main(String[] args) {
		SwingTutorial_1 sT = new SwingTutorial_1();
		System.out.println("Testing");
	}
}
